<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">andriy</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost/dark_sky</property>
        <property name="hibernate.connection.username">andriy</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.search.autoregister_listeners">false</property>
        <property name="hibernate.validator.apply_to_ddl">false</property>
        <mapping class="main.modelo.NoticiasPortada" />
        <mapping class="main.modelo.CuentasUsuario" />
        <mapping class="main.modelo.UsuarioInfo" />
        <mapping class="main.modelo.PostInfo" />
        <mapping class="main.modelo.PostComments" />
        <mapping class="main.modelo.PostContador" />
        <mapping class="main.modelo.AvatarImg" />
    </session-factory>
</hibernate-configuration>
